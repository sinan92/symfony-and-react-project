{% extends 'base.html.twig' %}

{% block body %}
    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col">
            <h1>Update Comment</h1>

            {% set updateCommentForm = updateCommentFormObject.createView %}
            {{ form_start(updateCommentForm, {'action': path('updateComment'), 'method': 'POST'}) }}

            {{ form_label(updateCommentForm.id, 'Id: ', {'label_attr': {'class': 'foo'}}) }}
            {{ form_widget(updateCommentForm.id, { 'attr': {'class': 'mdl-textfield__input'} }) }}

            {{ form_label(updateCommentForm.token, 'Token: ', {'label_attr': {'class': 'foo'}}) }}
            {{ form_widget(updateCommentForm.token, { 'attr': {'class': 'mdl-textfield__input'} }) }}

            {{ form_label(updateCommentForm.content, 'Content: ', {'label_attr': {'class': 'foo'}}) }}
            {{ form_widget(updateCommentForm.content, { 'attr': {'class': 'mdl-textfield__input'} }) }}

            <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" />
            {{ form_end(updateCommentForm) }}
            <br />

            <br />

            <br />

            <br />

            <h1>Delete Comment</h1>

            {% set deleteCommentForm = deleteCommentFormObject.createView %}
            {{ form_start(deleteCommentForm, {'action': path('deleteComment'), 'method': 'POST'}) }}

            {{ form_label(deleteCommentForm.id, 'Id: ', {'label_attr': {'class': 'foo'}}) }}
            {{ form_widget(deleteCommentForm.id, { 'attr': {'class': 'mdl-textfield__input'} }) }}

            {{ form_label(deleteCommentForm.token, 'Token: ', {'label_attr': {'class': 'foo'}}) }}
            {{ form_widget(deleteCommentForm.token, { 'attr': {'class': 'mdl-textfield__input'} }) }}

            <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" />
            {{ form_end(deleteCommentForm) }}
        </div>
    </div>
{% endblock %}
